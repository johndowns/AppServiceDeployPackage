{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "packageUrl": {
            "type": "string"
        }
    },
    "resources": [
        {
            "name": "[variables('apiAppServicePlanName')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-08-01",
            "kind": "app",
            "sku": {
                "name": "S1",
                "tier": "Standard",
                "size": "S1",
                "family": "S",
                "capacity": 1
            },
            "properties": {
                "name": "[variables('apiAppServicePlanName')]",
                "numberOfWorkers": 1
            }
        },
        {
            "name": "[variables('internalApiAppName')]",
            "type": "Microsoft.Web/sites",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-08-01",
            "kind": "web",
            "properties": {
                "name": "[variables('internalApiAppName')]",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('apiAppServicePlanName'))]",
                "httpsOnly": true,
                "clientAffinityEnabled": false,
                "siteConfig": {
                    "alwaysOn": true,
                    "ftpsState": "Disabled",
                    "connectionStrings": [
                        {
                            "name": "AzureStorage",
                            "connectionString": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('primaryStorageAccountName'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('primaryStorageAccountName')), providers('Microsoft.Storage', 'storageAccounts').apiVersions[0]).keys[0].value)]",
                            "type": "Custom"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "name": "appsettings",
                    "type": "config",
                    "apiVersion": "2014-11-01",
                    "properties": {
                        "APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(resourceId('Microsoft.Insights/components', variables('applicationInsightsName')), '2014-04-01').InstrumentationKey]"
                    },
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', variables('internalApiAppName'))]",
                        "[resourceId('Microsoft.Insights/components', variables('applicationInsightsName'))]"
                    ]
                },
                {
                    "name": "[variables('deploymentSlotName')]",
                    "type": "slots",
                    "location": "[resourceGroup().location]",
                    "apiVersion": "2015-08-01",
                    "tags": {
                        "displayName": "[variables('deploymentSlotName')]"
                    },
                    "properties": {
                        "httpsOnly": true,
                        "clientAffinityEnabled": false,
                        "siteConfig": {
                            "alwaysOn": true,
                            "ftpsState": "Disabled",
                            "connectionStrings": [
                                {
                                    "name": "AzureStorage",
                                    "connectionString": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('primaryStorageAccountName'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('primaryStorageAccountName')), providers('Microsoft.Storage', 'storageAccounts').apiVersions[0]).keys[0].value)]",
                                    "type": "Custom"
                                }
                            ]
                        }
                    },
                    "resources": [
                        {
                            "name": "appsettings",
                            "type": "config",
                            "apiVersion": "2014-11-01",
                            "properties": {
                                "APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(resourceId('Microsoft.Insights/components', variables('applicationInsightsName')), '2014-04-01').InstrumentationKey]"
                            },
                            "dependsOn": [
                                "[resourceId('Microsoft.Web/sites/slots', variables('internalApiAppName'), variables('deploymentSlotName'))]",
                                "[resourceId('Microsoft.Insights/components', variables('applicationInsightsName'))]"
                            ]
                        }
                    ],
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', variables('internalApiAppName'))]"
                    ]
                }
            ],
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('apiAppServicePlanName'))]",
                "[resourceId('Microsoft.Insights/components', variables('applicationInsightsName'))]"
            ]
        }
    ]
}
